<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit Entry</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/libraries/<%= library_id %>/entries/<%= entry._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="entry[text]" value="<%= entry.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/libraries">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>